    <script type="text/javascript">
      $(document).ready(function () {
        /* var userPoolId = null;
        var clientId = null;
        var region = null;
        var identityPoolId = null;
 */
        var idToken = null;
        var accessToken = null;
        var refreshToken = null;

        function initApp() {
          /* $.get("/config", {}, function (data) {
            console.log("AWS credentials: ", data);
            if (
              !data.userPoolId ||
              !data.clientId ||
              !data.region ||
              !data.identityPoolId
            ) {
              console.error("Could not fetch AWS configuration");
              return;
            }
            userPoolId = data.userPoolId;
            clientId = data.clientId;
            region = data.region;
            identityPoolId = data.identityPoolId;
          }); */
          idToken = Cookies.get("idToken");
          accessToken = Cookies.get("accessToken");
          refreshToken = Cookies.get("refreshToken");
          userEmail = Cookies.get("userEmail");

          $("#signup-form").validate({
            rules: {
              "signup-email": {
                required: true,
                minlength: 10,
              },
              "signup-password": {
                required: true,
                minlength: 8,
              },
            },
            messages: {
              "signup-email": {
                required: "test",
              },
              "signup-password": {
                minlength: "Password must be at least 8 characters long",
              },
            },
          });

          $.post("/validate-token", { idToken }, function (data) {
            if (data.isValid) {
              $("#nav-is-logged-in")
                .text("Logged in as: " + userEmail)
                .show();
              $("#nav-account").show();
              $("#nav-logout").show();
              $("#nav-register").hide();
              $("#nav-login").hide();
            } else {
              $("#loginModal").modal("show");
            }
          });
        }

        initApp();

        $("#loginToSignup").click(function () {
          $("#loginModal").modal("hide");
          $("#signupModal").modal("show");
        });

        $("#nav-register").click(function () {
          $("#loginModal").modal("hide");
          $("#signupModal").modal("show");
        });

        $("#signup").click(function () {
          var signupData = $("#signup-form").serialize();
          signupData +=
            "&filters=" +
            encodeURIComponent(JSON.stringify($("#signup-filters").val()));
          console.log(signupData);
          $.post("/signup", signupData, function (data) {
            $("#loginModal").modal("hide");
            $("#signupSuccess").show();
          })
            .error(function (xhr) {
              switch (xhr.status) {
                case 409:
                  $("#signupDuplicate").show();
                  break;
                default:
                  $("#signupError").show();
              }
            })
            .always(function () {
              $("#signupModal").modal("hide");
            });
        });
        $("#login").click(function () {
          $.post("/login", $("#loginForm").serialize(), function (data) {
            if (data.idToken && data.accessToken && data.refreshToken) {
              Cookies.set("accessToken", data.accessToken);
              Cookies.set("refreshToken", data.refreshToken);
              Cookies.set("idToken", data.idToken);
              Cookies.set("userEmail", data.email);
              $("#loginModal").modal("hide");
              $("#nav-is-logged-in")
                .text("Logged in as: " + data.email)
                .show();
              $("#nav-account").show();
              $("#nav-logout").show();
              $("#nav-register").hide();
              $("#nav-login").hide();
            }
          }).error(function (xhr) {
            console.log(xhr.status);
            switch (xhr.status) {
              case 401:
                $("#loginError").show();
                break;
              default:
                $("#loginError").show();
            }
          });
        }),
          "json";
        $("#nav-logout").click(function () {
          Cookies.remove("accessToken");
          Cookies.remove("refreshToken");
          Cookies.remove("idToken");
          Cookies.remove("userEmail");
          $("#nav-is-logged-in").hide();
          $("#nav-account").hide();
          $("#nav-logout").hide();
          $("#nav-register").show();
          $("#nav-login").show();
        });

        $("#account-update").click(function () {
          var data = $("#accountForm").serialize();
          data +=
            "&filters=" +
            encodeURIComponent(JSON.stringify($("#account-filters").val()));
          data += "&idToken=" + encodeURIComponent(Cookies.get("idToken"));
          $.post("/account-update", data, function (data) {
            if (data && data.success) {
              $("#accountUpdateSuccess").show();
            }
          });
        });

        $("#nav-account").click(function () {
          console.log("get acct");
          var acctIdToken = Cookies.get("idToken");
          if (!acctIdToken) {
            console.error("User is not authenticated");
            return;
          }
          $.post(
            "/account",
            {
              idToken: acctIdToken,
            },
            function (data) {
              if (data) {
                if (data.email) {
                  $("#account-email").val(data.email);
                }
                if (data.emailEnabled) {
                  $("#account-email-enabled").prop(
                    "checked",
                    data.emailEnabled
                  );
                }
                if (data.phone) {
                  $("#account-phone").val(data.phone);
                }
                if (data.phoneEnabled) {
                  $("#account-phone-enabled").prop(
                    "checked",
                    data.phoneEnabled
                  );
                }
                if (data.filters) {
                  $("#account-filters").selectpicker("val", data.filters);
                }
                $("#accountModal").show();
              }
            }
          ).error(function (xhr) {
            switch (xhr.status) {
              case 409:
                break;
              default:
                $("#accountError").show();
            }
          });
        }),
          "json";
      });
    </script>
